<Window x:Class="Bara_Tehni.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:myTools="clr-namespace:Bara_Tehni"
        Title="MainWindow" Height="{Binding SystemParameters.PrimaryScreenHeight}" 
    Width="{Binding SystemParameters.PrimaryScreenWidth}">
    <Window.Background>
        <ImageBrush ImageSource="Images/map.jpg"/>
    </Window.Background>
    <Grid PreviewMouseRightButtonDown="Grid_PreviewMouseRightButtonDown" Margin="50" HorizontalAlignment="Center">
        <Grid.Background>
            <ImageBrush ImageSource="Images/old-paper-texture.jpg"/>
        </Grid.Background>

        <myTools:Board x:Name="board" HorizontalAlignment="Center" />

    </Grid>
</Window>
